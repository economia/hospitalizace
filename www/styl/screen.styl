body
    margin 0px
    font-family sans-serif
    #wrap
        margin 20px // TODO: remove
        outline 2px solid #eee // TODO: remove
        width 670px
        .container
            .row
                position relative
                float left
                height 200px
                width 100%
                border-bottom 1px solid #999
                h2
                    font-size 1em
                    margin 0px
                    position absolute
                    top 7px
                    left 7px
                    z-index 2
                .sum
                    position relative
                    border-right 1px solid #999
                    border-left 1px solid #999
                    width 200px
                    height 200px
                    float left
                    .value
                        background red
                        border-radius 50%
                        margin auto
                        position absolute
                        top 0px
                        left 0px
                        bottom 0px
                        right 0px
                .years
                    position relative
                    border-right 1px solid #999
                    width 200px
                    height 200px
                    float left
                    .year
                        float left
                        height 50px
                        position absolute
                        bottom 0px
                        background blue


